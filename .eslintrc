{
    "plugins": [
        "joyent",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:joyent/style",
        "plugin:joyent/lint",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "env": {
        "node": true,
        // So `Map` and `Set` are defined:
        "es6": true
    },
    "rules": {
        "curly": ["error", "all"],
        "max-len": "off",
        "prettier/prettier": "error"
    }
}
